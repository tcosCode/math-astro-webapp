---
import ViewTransitions from "astro/components/ViewTransitions.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content="Clases y ejercicios de matemÃ¡ticas para estudiantes de secundaria y preuniversitarios"
    />
    <meta name="twitter:image" content="/images/social-image.webp" />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <!--Contenedor-->
    <div class="container">
      <Header />
      <main class="main">
        <slot />
      </main>
    </div>
    <Footer />
  </body>
</html>

<style is:global>
  /* Reset */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  /* Colors */
  :root {
    --primary-color: hsl(205, 92%, 44%);
    --primary-color-dark: hsl(205, 80%, 52%);
    --primary-color-dark-2: hsl(205, 84%, 61%);

    --primary-color-light: hsl(205, 87%, 80%);
    --primary-color-light-2: hsl(205, 86%, 69%);

    --secondary-color-dark: hsl(16, 100%, 54%);
    --secondary-color-dark-2: hsl(16, 100%, 50%);

    --secondary-color-light: hsl(16, 100%, 81%);
    --secondary-color-light-2: hsl(16, 100%, 71%);

    --secondary-color-light-3: hsl(42, 100%, 91%);

    /* Color for exercises */
    --correct-color: hsl(120, 39%, 54%);
    --border-correct-color: hsl(120, 39%, 49%);

    --incorrect-color: hsl(2, 64%, 58%);
    --border-incorrect-color: hsl(2, 64%, 53%);

    --background-color: hsl(0, 0%, 98%);
    --border-background-color: hsl(0, 0%, 87%);

    --btn-option-background-color: hsl(0, 0%, 94%);
    --border-btn-option: hsl(0, 0%, 80%);
    --btn-option-hover-background-color: hsl(0, 0%, 91%);

    --dark-grey: hsl(233, 22%, 23%);
    --dark-grey-2: hsl(225, 21%, 71%);

    --light-grey: hsl(240, 11%, 93%);
    --light-grey-2: hsl(0, 0%, 89%);

    --white-color: hsl(0, 0%, 100%);
    --black-color: hsl(0, 0%, 0%);
  }

  /* Styles for the tables */
  table {
    width: 50%;
    margin: auto;
    border-collapse: collapse;
    text-align: left;
  }
  th,
  td {
    padding: 8px;
    border: 1px solid #ddd;
  }
  th {
    background-color: #f2f2f2;
  }
  tr:nth-child(even) {
    background-color: #f9f9f9;
  }

  /* Reduce motion */
  @media (prefers-reduced-motion: reduce) {
    * {
      animation: none;
      transition: none;
    }
  }

  @media (prefers-reduced-motion: no-preference) {
    :root {
      scroll-behavior: smooth;
    }
  }

  /*  Global styles */
  html {
    font-size: 16px;
    font-family: "Roboto", sans-serif;
    background-color: var(--white-color);
    color: var(--black-color);
  }

  ul {
    list-style: none;
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  body,
  html {
    overflow-x: hidden;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;

    /* To keep the footer in the bottom of the page */
    min-height: 100dvh;
    display: grid;
    grid-template-rows: auto 1fr auto;
  }

  main {
    margin: 1rem;
  }

  .svg {
    width: 1em;
    height: 1em;
    fill: currentColor;
  }

  @media (max-width: 768px) {
    .svg {
      align-items: center;
      justify-content: center;
    }
  }
</style>
