---
import { ClientRouter } from "astro:transitions";
import Header from "@components/Header.astro";
import PreFooter from "@components/PreFooter.astro";
import Footer from "@components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Open Graph tags -->
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Clases y ejercicios de matemáticas para estudiantes de secundaria y preuniversitarios"
    />
    <meta
      name="image"
      property="og:image"
      content="https://math.monteserin.dev/img/social-image.webp"
    />
    <meta property="og:url" content="https://math.monteserin.dev/" />
    <meta property="og:type" content="website" />

    <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content="Clases y ejercicios de matemáticas para estudiantes de secundaria y preuniversitarios"
    />
    <meta
      name="twitter:image"
      content="https://math.monteserin.dev/img/social-image.webp"
    />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="bg-pattern">
    <!--Container-->
    <Header />
    <div class="container">
      <main class="main">
        <slot />
      </main>
    </div>
    <PreFooter />
    <Footer />
  </body>
</html>

<style is:global>
  /* Reset */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  /* Colors */
  :root {
    --primary-color: hsl(205, 92%, 44%);
    --primary-color-dark: hsl(205, 80%, 52%);
    --primary-color-dark-2: hsl(205, 84%, 61%);

    --primary-color-light: hsl(205, 87%, 80%);
    --primary-color-light-2: hsl(205, 86%, 69%);
    --primary-color-light-3: #eef6ff;

    --secondary-color-dark: hsl(16, 100%, 54%);
    --secondary-color-dark-2: hsl(16, 100%, 50%);

    --secondary-color-light: hsl(16, 100%, 81%);
    --secondary-color-light-1: #ff7747;
    --secondary-color-light-2: hsl(16, 100%, 71%);

    --secondary-color-light-3: hsl(42, 100%, 91%);

    /* Color for exercises */
    --correct-color: hsl(120, 39%, 54%);
    --border-correct-color: hsl(120, 39%, 49%);

    --incorrect-color: hsl(2, 64%, 58%);
    --border-incorrect-color: hsl(2, 64%, 53%);

    --background-color: hsl(0, 0%, 98%);
    --border-background-color: hsl(0, 0%, 87%);

    --btn-option-background-color: hsl(0, 0%, 94%);
    --border-btn-option: hsl(0, 0%, 80%);
    --btn-option-hover-background-color: hsl(0, 0%, 91%);

    --dark-grey: hsl(233, 22%, 23%);
    --dark-grey-2: hsl(225, 21%, 71%);

    --light-grey: hsl(240, 11%, 93%);
    --light-grey-2: hsl(0, 0%, 89%);

    --white-color: hsl(0, 0%, 100%);
    --black-color: hsl(0, 0%, 0%);
  }

  /* Styles for the tables */
  table {
    width: 50%;
    margin: auto;
    border-collapse: collapse;
    text-align: left;
  }
  th,
  td {
    padding: 8px;
    border: 1px solid #ddd;
  }
  th {
    background-color: #f2f2f2;
  }
  tr:nth-child(even) {
    background-color: #f9f9f9;
  }

  /* Reduce motion */
  @media (prefers-reduced-motion: reduce) {
    * {
      animation: none;
      transition: none;
    }
  }

  @media (prefers-reduced-motion: no-preference) {
    :root {
      scroll-behavior: smooth;
    }
  }

  /*  Global styles */
  html {
    font-size: 16px;
    font-family: "Roboto", sans-serif;
    background-color: var(--white-color);
    color: var(--black-color);
  }

  body {
    background-attachment: fixed;
  }

  .bg-pattern {
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%239C92AC' fill-opacity='0.07'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  }

  ul {
    list-style: none;
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;

    /* To keep the footer in the bottom of the page
    min-height: 100dvh;
    display: grid;
    grid-template-rows: auto 1fr auto;
    */
  }

  main {
    margin: 1rem;
  }

  .svg {
    width: 1em;
    height: 1em;
    fill: currentColor;
  }

  @media (max-width: 768px) {
    .svg {
      align-items: center;
      justify-content: center;
    }
  }
</style>
