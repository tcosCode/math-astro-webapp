---
interface Props {
  title: string;
  classes: class_[];
}

interface class_ {
  title: string;
  grade: string;
  image: string;
  url?: string;
}

const { title, classes } = Astro.props;
---

<section class="grade-section">
  <h2>{title}</h2>
  <ul class="class-list">
    {
      classes.map((class_) => (
        <li>
          <a href={`/videos/${class_.title}`} class="class-link">
            {class_.title}
          </a>
        </li>
      ))
    }
  </ul>
</section>

<style>
  .grade-section {
    margin-bottom: 2rem;
  }

  h2 {
    font-size: 1.8rem;
    text-align: center;
    margin: 1.5rem 0;
    color: var(--primary-color);
  }

  .class-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin: 0 auto;
    max-width: 100%;
  }

  .class-list li {
    border: 1px solid var(--border-btn-option);
    border-radius: 8px;
    background-color: var(--btn-option-background-color);
    transition:
      transform 0.2s,
      box-shadow 0.2s;
  }

  .class-list li:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 8px hsla(0, 0%, 0%, 0.1);
    background: #eef6ff;
  }

  .class-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    padding: 1rem;
    text-align: center;
    font-size: 1.2rem;
    font-weight: 500;
    color: var(--dark-grey);
    text-decoration: none;
  }

  .class-link:hover {
    color: var(--primary-color);
  }
</style>
