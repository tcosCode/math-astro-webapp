---
interface Props {
  img: string;
  grade: string;
  subjects: Array<string>;
}

const { img, grade, subjects } = Astro.props;
---

<article class="grade">
  <img src={img} alt={grade} />

  <h3>{grade}</h3>
  <ul>
    {
      subjects.map((subject: string) => {
        <li>{subject}</li>;
      })
    }
  </ul>
  <hr />
</article>

<style>
  .grade {
    margin: 1rem;
    padding: 1rem;
    border-radius: 25px;
    background-color: var(--white-color);
    text-align: center;
    flex: 1;
    transition: all 0.6s ease;
  }

  .grade:hover {
    box-shadow: 5px 5px 20px var(--dark-grey-2);
    cursor: pointer;
    transform: translateY(20px);
    scale: 1.05;
  }

  .grade:hover hr {
    transform: scaleX(2);
  }

  .grade h3 {
    color: var(--dark-grey);
    margin-bottom: 1rem;
  }

  .grade ul {
    gap: 0.2rem;
  }

  .grade ul li {
    color: var(--dark-grey-2);
    margin-bottom: 0.4rem;
  }

  .grade hr {
    width: 50%;
    margin: 1rem auto;
    border: 1px solid var(--secondary-color-dark-2);
    transition: transform 1s ease;
  }

  @media (max-width: 768px) {
    .grade {
      width: 90%;
      gap: 0rem;
    }
  }
</style>
