---
interface Props {
  img: string;
  grade: string;
  subjects: Array<string>;
  href: string;
}

const { img, grade, subjects, href } = Astro.props;
---

<article class="grade">
  <a href={href}>
    <img src={img} alt={grade} transition:name={`image ${grade} id`} />
    <h3>{grade}</h3>
    <ul>
      {subjects.map((subject: string) => <li>{subject}</li>)}
    </ul>
    <hr />
  </a>
</article>

<style>
  .grade {
    width: 100%;
    height: auto;
    max-width: 400px;
    margin: 0 auto;
    padding: 1rem;
    border-radius: 25px;
    background-color: var(--white-color);
    text-align: center;
    transition: all 0.6s ease;
  }

  .grade:hover {
    box-shadow: 5px 5px 20px rgba(0, 0, 0, 0.2);
    cursor: pointer;
    transform: translateY(-10px);
    scale: 1.05;
  }

  .grade:hover hr {
    transform: scaleX(1.5);
  }

  .grade img {
    max-width: 100%;
    height: auto;
    aspect-ratio: 1/1;
    object-fit: cover;
  }

  .grade h3 {
    color: var(--dark-grey);
    margin-bottom: 1rem;
    font-size: 1.2rem;
  }

  .grade ul li {
    color: var(--dark-grey-2);
    margin-bottom: 0.5rem;
  }

  .grade hr {
    width: 50%;
    margin: 1rem auto;
    border: 1px solid var(--secondary-color-dark-2);
    transition: transform 0.6s ease;
  }
</style>
