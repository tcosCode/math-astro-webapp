---
//Import types
import type { ProblemProps } from "@types";

import ExercisesCard from "@components/ui/ExercisesCard.astro";
import Accordion from "@components/AccordionProblem.astro";

const { inciso, exerciseText, answer } = Astro.props as ProblemProps;
---

<ExercisesCard id="grid-item">
  <!-- Opciones de respuesta utilizando CSS Grid -->

  <div class="card">
    <div class="card-inner">
      <div class="card-front">
        <p><strong>{inciso})</strong> <span set:html={exerciseText} /></p>
      </div>
      <div class="card-back">
        <Accordion text={answer} />
      </div>
    </div>
  </div>
</ExercisesCard>

<style>
  /* Card Flip */
  .card {
    align-self: center;
    width: 300px;
    height: 200px;
    perspective: 1000px;
  }

  .card-inner {
    width: 100%;
    height: 100%;
    position: relative;
    transform-style: preserve-3d;
    transition: transform 0.999s;
  }

  .card:hover .card-inner {
    transform: rotateY(180deg);
  }

  .card-front,
  .card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
  }

  .card-front {
    background-color: hsl(var(--primary-color));
    opacity: 0.8;
    color: white;
    display: flex;
    align-items: center;
    padding: 0 1rem;
    border-radius: 10px;
    font-size: 1.2rem;
    transform: rotateY(0deg);
    box-shadow: 0 5px 8px rgba(0, 0, 0, 0.2);
  }

  .card-back {
    background-color: hsl(var(--secondary-color-light));
    color: hsl(var(--secondary-color-light-2));
    display: flex;
    align-items: center;
    padding: 0 1rem;
    border-radius: 10px;
    font-size: 1.2rem;
    transform: rotateY(180deg);
    box-shadow: 0 5px 8px rgba(0, 0, 0, 0.2);
  }
</style>
