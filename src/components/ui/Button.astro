---
interface Props {
  text: string;
  url: string;
  buttonType: "primary" | "outline";
}

const { text, url, buttonType } = Astro.props;
---

<a href={url} class={buttonType === "primary" ? "button-primary" : "button-outline"}
  >{text}</a
>

<style>
  .button-primary {
    border: 1px solid var(--primary-color);
    border-radius: 50px;
    background-color: var(--primary-color-dark);
    font-size: 16px;
    padding: 1rem 1.5rem;
    color: var(--white-color);
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.2s ease-in-out;
    user-select: none;
  }

  .button-primary:hover {
    background-color: var(--primary-color);
  }

  .button-outline {
    border: 1px solid var(--primary-color);
    border-radius: 50px;
    background-color: var(--white-color);
    font-size: 16px;
    padding: 1rem 1.5rem;
    color: var(--dark-grey);
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.2s ease-in-out;
    user-select: none;
  }

  .button-outline:hover {
    background-color: var(--primary-color-light-3);
  }
</style>
