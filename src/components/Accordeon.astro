---
const { text } = Astro.props;
---

<details>
  <summary>
    <h4><strong>Respuesta</strong></h4>
  </summary>
  <p set:html={text} />
</details>

<style>
  details {
    margin: 10px;
    padding: 10px;
    width: 100%;
    border: 1px solid var(--secondary-color-light-3);
    border-radius: 8px;
  }

  details summary > * {
    display: inline;
  }

  summary {
    cursor: pointer;
  }

  p {
    margin: 10px;
  }
</style>
