---
import ArrowDown from "./icons/ArrowDown.astro";
import LogoFunction from "./icons/LogoFunction.astro";
import Menu from "./icons/Menu.astro";
---

<!--Header-->
<header class="header">
  <div>
    <figure><LogoFunction class="svg svg-logo" /></figure>
    <h1 class="header-title">Matem√°tica</h1>
  </div>
  <!--Nav-->
  <nav class="navbar" id="navbar">
    <ul class="navbar-list">
      <li class="navbar-item">
        <a href="/" class="navbar-link">Inicio</a>
      </li>
      <li class="navbar-item static">
        <span>Ejercicios</span>
        <ArrowDown class="svg" />
      </li>
      <li class="navbar-item"><a href="#" class="navbar-link">Contacto</a></li>
    </ul>
  </nav>
  <figure>
    <Menu class="menu" id="menu" />
  </figure>
</header>
<script src="../utils/scriptMenu.ts"></script>

<style>
  .header {
    display: flex;
    height: 3.5rem;
    padding: 2.5rem 0;
    justify-content: space-evenly;
    align-items: center;
    border-bottom: 2px solid var(--primary-color);
  }

  .header > div {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .header-title {
    font-size: 3rem;
    color: var(--primary-color);
  }

  .svg-logo {
    fill: var(--secondary-color-light-2);
    width: 4rem;
    height: auto;
  }

  .navbar {
    display: flex;
  }
  .navbar-list {
    display: flex;
  }

  .navbar-item {
    padding: 0.5rem 1rem;
    color: var(--dark-grey);
    font-weight: 500;
    cursor: pointer;
    border-radius: 4px;
    transition: background-color 0.4s ease;
  }

  .navbar-item:hover {
    background-color: var(--light-grey);
    color: var(--dark-grey);
  }

  .navbar-link {
    width: 100%;
    height: 100%;
  }

  .static {
    display: flex;
    align-items: center;
    gap: 0.3rem;
  }

  .static:hover {
    transform: none;
  }

  .menu {
    display: none;
  }

  @media (max-width: 768px) {
    .menu {
      display: block;
      width: 1.5rem;
      height: 1.5rem;
      filter: invert(50%) sepia(100%) saturate(500%) hue-rotate(180deg)
        brightness(90%) contrast(100%);
    }
    .menu:active {
      scale: 0.8;
    }
  }

  @media (max-width: 768px) {
    .navbar {
      position: absolute;
      top: 0;
      left: -60vw;
      border-radius: 0 0 5px 0;
      background-color: var(--secondary-color-2-dark);
      box-shadow: 5px 0 20px var(--secondary-color-2-dark);
      width: 45vw;
      height: 100vh;
      z-index: 100;
      transition: left 0.3s ease;
    }
    .navbar-list {
      flex-direction: column;
      gap: 1rem;
      margin-top: 2rem;
      width: 100%;
    }
    .navbar-item {
      padding: 1rem 2rem;
      background: var(--secondary-color-2-light);
      color: var(--white-color);
      font-weight: 600;
    }
    .navbar-item:active {
      color: var(--secondary-color-2-dark);
      background: var(--secondary-color-2-dark);
    }
    .navbar.open {
      left: 0;
    }
  }
</style>
