---
import Logo from "./icons/Logo.astro";
import Menu from "./icons/Menu.astro";
---

<!--Header-->
<header class="header">
  <div class="logo">
    <Logo class="svg-logo" />
    <h1 class="header-title">Matem√°tica</h1>
  </div>
  <!--Nav-->
  <nav class="navbar" id="navbar">
    <ul class="navbar-list">
      <li class="navbar-item">
        <a href="/" class="navbar-link">Inicio</a>
      </li>
      <li class="navbar-item">
        <a href="#" class="navbar-link">Ejercicios</a>
      </li>
      <li class="navbar-item"><a href="#" class="navbar-link">Contacto</a></li>
    </ul>
  </nav>
  <figure>
    <Menu class="menu" id="menu" />
  </figure>
</header>
<script src="../utils/scriptMenu.ts"></script>

<style>
  .header {
    height: 3.5rem;
    margin-top: 1.2rem;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
  }

  @media (max-width: 768px) {
    .header-title {
      font-size: 2rem;
    }
  }

  .logo {
    display: flex;
    gap: 1rem;
    align-items: center;
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--primary-color);
  }

  .svg-logo {
    width: 4rem;
  }

  .navbar {
    display: flex;
  }
  .navbar-list {
    display: flex;
  }

  .navbar-item {
    padding: 0.5rem 1rem;
    background: linear-gradient(
      to right,
      var(--secondary-color-2-dark) 50%,
      transparent 50%
    );
    background-position: 100% 0;
    background-size: 300% 100%;
    color: var(--dark-grey);
    font-weight: 500;
    cursor: pointer;
    transition:
      background-position 0.6s ease,
      color 0.6s ease;
  }

  .navbar-item:hover {
    background-position: left bottom;
    color: var(--white-color);
  }

  .menu {
    display: none;
  }

  @media (max-width: 768px) {
    .menu {
      display: block;
      width: 1.5rem;
      height: 1.5rem;
      filter: invert(50%) sepia(100%) saturate(500%) hue-rotate(180deg)
        brightness(90%) contrast(100%);
    }
    .menu:active {
      scale: 0.8;
    }
  }

  @media (max-width: 768px) {
    .navbar {
      position: absolute;
      top: 0;
      left: -60vw;
      border-radius: 0 0 5px 0;
      background-color: var(--secondary-color-2-dark);
      box-shadow: 5px 0 20px var(--secondary-color-2-dark);
      width: 45vw;
      height: 100vh;
      z-index: 100;
      transition: left 0.3s ease;
    }
    .navbar-list {
      flex-direction: column;
      gap: 1rem;
      margin-top: 2rem;
      width: 100%;
    }
    .navbar-item {
      padding: 1rem 2rem;
      background: var(--secondary-color-2-light);
      color: var(--white-color);
      font-weight: 600;
    }
    .navbar-item:active {
      color: var(--secondary-color-2-dark);
      background: var(--secondary-color-2-dark);
    }
    .navbar.open {
      left: 0;
    }
  }
</style>
