---
import ArrowDown from "@components/icons/ArrowDown.astro";
import LogoFunction from "@components/icons/LogoFunction.astro";
import Menu from "@components/icons/Menu.astro";
import { topics } from "@data/topics.js";
---

<!--Header-->
<header class="header">
  <div>
    <figure><LogoFunction class="svg svg-logo" /></figure>
    <h1 class="header-title">Matem√°tica</h1>
  </div>
  <!--Nav-->
  <nav class="navbar" id="navbar">
    <div class="navbar-list">
      <a href="/" class="navbar-item navbar-link">Inicio</a>
      <div class="navbar-item drop-down">
        <span>Ejercicios</span>
        <ArrowDown class="svg arrow" />
        <div class="menu-drop-down">
          {
            topics.map((topic) => (
              <a href={`/${topic.title}`}>{topic.title} Grado</a>
            ))
          }
        </div>
      </div>
      <a href="/classes" class="navbar-item navbar-link">Videoclases</a>
    </div>
  </nav>
  <!-- Hamburger menu -->
  <figure>
    <Menu class="menu" id="menu" />
  </figure>
  <div class="auth navbar-item">Login</div>
</header>
<script src="../utils/scriptMenu.ts"></script>

<style>
  .header {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    padding: 0.5rem;
    border-bottom: 2px solid var(--primary-color);
  }

  .header > div {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .header-title {
    font-size: clamp(2.5rem, 4vw, 3rem);
    color: var(--primary-color);
  }

  .svg-logo {
    fill: var(--secondary-color-light-2);
    width: 4rem;
    height: auto;
  }

  .navbar {
    display: flex;
    position: relative;
    transition: 300ms;
  }

  .navbar-list {
    display: flex;
    margin-bottom: 3px;
    border-radius: 5px;
    position: relative;
    z-index: 100000;
    align-items: center;
    justify-content: space-between;
  }

  .navbar-item {
    padding: 0.5rem 1rem;
    color: var(--dark-grey);
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.3s ease;
    user-select: none;
  }

  .navbar-item:hover {
    background-color: var(--light-grey);
    color: var(--dark-grey);
  }

  .navbar-link {
    width: 100%;
    height: 100%;
    user-select: none;
  }

  .drop-down {
    display: flex;
    align-items: center;
    gap: 0.3rem;
    position: relative;
  }

  .arrow {
    transition: transform 0.3s ease;
  }

  .menu-drop-down {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    align-items: center;
    font-size: 0.8rem;
    width: 100%;
    border-radius: 4px;
    padding: 5px;
    background-color: var(--light-grey);
    position: absolute;
    margin-top: 0.4rem;
    top: 100%;
    left: 0;
    opacity: 0;
    pointer-events: none;
    transform: translateY(-10px);
    transition:
      opacity 300ms,
      transform 300ms;
  }

  /* Extend the hover area with an invisible space using ::before */
  .menu-drop-down::before {
    content: "";
    position: absolute;
    top: -0.4rem; /* Space above the element */
    left: 0;
    right: 0;
    height: 0.4rem; /* Adjust the height of the invisible area */
    pointer-events: auto; /* Ensure that this area is interactive */
  }

  .drop-down:hover .menu-drop-down {
    opacity: 1;
    pointer-events: auto;
    transform: translateY(0);
  }

  .drop-down:hover .arrow {
    transform: rotate(180deg);
  }

  .menu-drop-down a {
    padding: 0.5rem 1rem;
    border-radius: 4px;
    transition: background-color 0.3s ease;
  }

  .menu-drop-down a:hover {
    background-color: var(--primary-color);
    color: var(--white-color);
  }

  .menu {
    display: none;
    cursor: pointer;
  }

  .header .auth {
    border: 1px solid var(--primary-color);
    border-radius: 5px;
  }
  .auth:hover {
    background-color: var(--primary-color);
    color: var(--white-color);
  }

  @media (max-width: 768px) {
    .menu {
      display: block;
      width: 1.5rem;
      height: 1.5rem;
      filter: invert(50%) sepia(100%) saturate(500%) hue-rotate(180deg)
        brightness(90%) contrast(100%);
    }
    .menu:active {
      scale: 0.8;
    }

    .navbar {
      position: fixed;
      top: 0;
      left: -65vw;
      border-radius: 0 5px 5px 0;
      background-color: var(--secondary-color-dark);
      box-shadow: 1px 0 8px var(--secondary-color-light-2);
      width: 60vw;
      height: 100vh;
      z-index: 100;
      transition: left 0.3s ease;
      overflow-y: scroll;
      scrollbar-width: none;
    }

    .navbar.open {
      left: 0;
    }

    .navbar-list {
      flex-direction: column;
      justify-content: flex-start;
      gap: 0.1em;
      margin-top: 2rem;
      width: 100%;
    }
    .navbar-item {
      padding: 1rem 2rem;
      color: var(--white-color);
      font-weight: 600;
      height: fit-content;
    }

    .drop-down {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      width: 100%;
    }

    .menu-drop-down {
      align-items: flex-start;
      gap: 0;
      padding: 0;
      position: static;
      opacity: 1;
      transform: none;
      transition: none;
      background-color: transparent;
    }

    .drop-down a {
      padding-left: 1rem;
    }

    .drop-down:hover a {
      color: var(--dark-grey);
    }

    .drop-down a:hover {
      color: var(--white-color);
    }

    .drop-down .arrow {
      display: none;
    }

    .menu-drop-down a {
      padding: 0.8rem 1.5rem;
      width: 100%;
    }

    .menu-drop-down a:hover {
      background-color: var(--secondary-color-light-2);
    }

    .header .auth {
      display: none;
    }
  }

  @media (max-width: 400px) {
    .header-title {
      display: none;
    }
  }
</style>
