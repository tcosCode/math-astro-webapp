---
import Layout from "@layouts/Layout.astro";
import { classes } from "@data/constants";

export function getStaticPaths() {
  const paths: Array<{ params: { video: string } }> = [];

  // Genera rutas dinÃ¡micas basadas en los datos disponibles
  classes.forEach((class_) => {
    paths.push({ params: { video: class_.title } });
  });
  return paths;
}

const { video } = Astro.params;
const currentClass = classes.find((class_) => class_.title === video);

if (!currentClass) {
  Astro.redirect("/404");
}
---

<Layout title={`Videos de la clase ${video}`}>
  <section class="video">
    <h2 class="h2-video">
      <span>{video}</span>
    </h2>
    <div class="video-container">
      {
        currentClass && (
          <iframe
            width="100%"
            height="100%"
            src={`https://www.youtube.com/embed/${currentClass.url}`}
            title="YouTube video player"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            referrerpolicy="strict-origin-when-cross-origin"
            allowfullscreen
          />
        )
      }
    </div>
  </section>
</Layout>

<style>
  .video {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-block: clamp(1rem, 2vw, 4rem);
    padding: 0 1rem; /* Add padding for smaller screens */
  }

  .h2-video {
    font-size: clamp(1.5rem, 3vw, 2.25rem);
    color: var(--dark-grey);
    text-align: center; /* Center the title */
  }

  .video-container {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%; /* 16:9 aspect ratio (height/width * 100) */
    margin-top: 2rem;
  }

  .video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>
