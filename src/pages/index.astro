---
import Layout from "../layouts/Layout.astro";
import YearSection from "../components/YearSection.astro";
import Card from "../components/Card.astro";
import { topics } from "../data/topics";
---

<Layout title="MatemÃ¡ticas">
  <YearSection title="Temas por Grado-Secundaria">
    {
      topics
        .slice(0, 3)
        .map((topic) => (
          <Card
            img={topic.img}
            grade={topic.title}
            subjects={topic.list}
            href={`/${topic.title}`}
          />
        ))
    }
  </YearSection>

  <YearSection title="Temas por Grado-PreUniversitario">
    {
      topics
        .slice(3)
        .map((topic) => (
          <Card
            img={topic.img}
            grade={topic.title}
            subjects={topic.list}
            href={`${topic.title}`}
          />
        ))
    }
  </YearSection>
</Layout>
