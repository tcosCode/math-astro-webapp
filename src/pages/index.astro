---
import Layout from "@layouts/Layout.astro";
import Hero from "@components/Hero.astro";
import YearSection from "@components/YearSection.astro";
import Features from "@components/Features.astro";
import Card from "@components/Card.astro";
import { topics } from "@data/index";
---

<Layout title="FxCesar">
  <Hero />
  <YearSection title="Secundaria">
    {
      topics
        .slice(0, 3)
        .map((topic) => (
          <Card
            img={topic.img}
            grade={topic.title}
            subjects={topic.list}
            href={`/${topic.title}`}
          />
        ))
    }
  </YearSection>

  <YearSection title="PreUniversitario">
    {
      topics
        .slice(3)
        .map((topic) => (
          <Card
            img={topic.img}
            grade={topic.title}
            subjects={topic.list}
            href={`/${topic.title}`}
          />
        ))
    }
  </YearSection>
  <Features />
</Layout>
