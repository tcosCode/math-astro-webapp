{
  "include": ["src/**/*"],
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "types": ["@astrojs/db"],
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@data/*": ["src/data/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@utils/*": ["src/utils/*"],
      "@db/*": ["db/*"],
      "@repositories/*": ["src/repositories/*"],
      "@types": ["src/types"]
    }
  }
}
